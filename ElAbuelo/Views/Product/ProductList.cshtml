@model List<Product>

<h2>Lista de productos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product prod in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => prod.Name)</td>
                <td>@Html.DisplayFor(model => prod.Description)</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@prod.Id" class="btn btn-primary">Editar</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@prod.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Agregar</a>
            </td>
        </tr>
    </tfoot>
</table>
